{
    "name": "wedevelopnl/silverstripe-openid-connect",
    "description": "Use OpenID connect as authentication method for silverstripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "authentication",
        "OpenID"
    ],
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "WeDevelop",
        "email": "development@wedevelop.nl"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "silverstripe/framework": "^4.12",
        "steverhoades/oauth2-openid-connect-client": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "WeDevelop\\OpenIDConnect\\": "src/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": false,
            "silverstripe/vendor-plugin": false
        }
    }
}
